<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
  <div class="col-md-7">
    <p>
      Created by {{user.name}} on {{format_date date_created}}
    </p>
  </div>

  {{ else }}

  <p>No current blog posts</p>
</div>
{{/each}}
