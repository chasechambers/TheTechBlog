<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{post}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
  
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Leave a comment:</h3>

    <form class="form new-comment-form">
      <input type="hidden" value="{{user_id}}" name="user_id" id="user_id">
      <input type="hidden" value="{{blog_id}}" name="blog_id" id="blog_id">
      <div class="form-group">
        <label for="comment-desc">comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <h3>Current Comments:</h3>
  {{#if comments.length}}
  <div class="col-md-6 blog-list">
  

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

  {{else}}

  <p>No comments</p>
  {{/if}}
</div>


<script src="/js/comment.js"></script>