<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{post}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
  


<div>
    <div>
    {{#if logged_in}}
      <h3>Leave a comment:</h3>

      <form class="form new-comment-form">
        <input type="hidden" value="{{user_id}}" name="user_id" id="user_id">
        <input type="hidden" value="{{id}}" name="blog_id" id="blog_id">
        <div class="form-group">
          <label for="comment-desc">comment:</label>
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      {{ else }}
      <p> Log in to leave a comment!</p>

    {{/if}}
    <h3>Current Comments:</h3>

    <div>
      {{#each comments}}

          <P>{{comment}}</p> 
          <p>created on {{format_date date_created}}</p>
          <p>by {{user.name}}</P>

      {{/each}}

    </div>
  </div>
</div>

<script src="/js/comment.js"></script>